# Production Environment Configuration for Railway
# Copy this to .env in Railway dashboard

# Database Configuration (Railway auto-populates these)
DB_HOST=${MYSQL_HOST}
DB_PORT=${MYSQL_PORT}
DB_NAME=${MYSQL_DATABASE}
DB_USER=${MYSQL_USER}
DB_PASS=${MYSQL_PASSWORD}

# Application Settings
APP_ENV=production

# Email Configuration (UPDATE WITH YOUR DETAILS)
SMTP_HOST=smtp.gmail.com
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_PORT=587
SMTP_ENCRYPTION=tls

# File Upload Settings
MAX_FILE_SIZE=10M
MAX_EXECUTION_TIME=300

# Security Settings
SECURE_HEADERS=true
