{
  "name": "MIW Travel Management System",
  "description": "Complete travel management system for Haji and Umroh packages with customer registration, document management, and admin dashboard.",
  "repository": "https://github.com/takaruma7/MIW",
  "logo": "https://raw.githubusercontent.com/takaruma7/MIW/main/miw_logo.png",
  "keywords": ["php", "travel", "haji", "umroh", "management", "postgresql"],
  "image": "heroku/php",
  "stack": "heroku-22",
  "website": "https://github.com/takaruma7/MIW",
  "success_url": "/init_database_universal.php",
  "env": {
    "APP_ENV": {
      "description": "Application environment",
      "value": "production",
      "required": true
    },
    "SMTP_HOST": {
      "description": "SMTP server hostname for email notifications",
      "value": "smtp.gmail.com",
      "required": true
    },
    "SMTP_USERNAME": {
      "description": "SMTP username (email address)",
      "value": "drakestates@gmail.com",
      "required": true
    },
    "SMTP_PASSWORD": {
      "description": "SMTP password or app-specific password",
      "value": "lqqj vnug vrau dkfa",
      "required": true
    },
    "SMTP_PORT": {
      "description": "SMTP port number",
      "value": "587",
      "required": true
    },
    "SMTP_ENCRYPTION": {
      "description": "SMTP encryption method",
      "value": "tls",
      "required": true
    },
    "MAX_FILE_SIZE": {
      "description": "Maximum file upload size",
      "value": "10M",
      "required": false
    },
    "MAX_EXECUTION_TIME": {
      "description": "Maximum PHP execution time in seconds",
      "value": "300",
      "required": false
    },
    "SECURE_HEADERS": {
      "description": "Enable security headers",
      "value": "true",
      "required": false
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "scripts": {
    "postdeploy": "echo 'Please visit /init_database_universal.php to initialize the database'"
  }
}
